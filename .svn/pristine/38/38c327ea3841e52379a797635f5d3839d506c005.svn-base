    public partial class ItemAudio : UserControl
    {
        private string audioFileFullName;

        bool selected = false;

        public bool Selected
        {
            get { return selected; }
            set
            {
                selected = value;
                if (selected)
                {
                    this.btnSaveAudio.BackgroundImage = global::Demo.Properties.Resources.btnSelected;
                    this.btnSaveAudio.Enabled = false;
                }
                else
                {
                    this.btnSaveAudio.BackgroundImage = global::Demo.Properties.Resources.btnSave;
                    this.btnSaveAudio.Enabled = true;
                }
            }
        }

        public ItemAudio()
        {
            InitializeComponent();
        }

        public System.Windows.Forms.RadioButton RadioButton
        {
            get { return radioButton; }
        }

