using Maticsoft.Common.model;
using System;
using System.Collections.Generic;
using System.Drawing;
using System.Text;

namespace Maticsoft.BLL.ScanPortImage.imageStructure
{
    public class JLRFSF8GStructure : SPImageStructure
    {
        public JLRFSF8GStructure()
        {
            this.PTYPE_HEAD_DESC = new String[] {"010010101111"};
            this.ISHAS_CLEARANCE_TYPE = false;
            this.HIGHLY_EFFECTIVE_CONTENT = 30 * SPImageGlobal.BB_HIGH;

            //投注块
            for (int i = 0; i < 8; i++)
            {
                this.DATA_BLOCK_LIST.Add(new JL_DXF_DataBlock(SPImageGlobal.LEFT_RACE_START_X + (i % 3) * SPImageGlobal.RACE_BLOCK_WIDTH,
                    SPImageGlobal.START_POINT_Y + SPImageGlobal.BB_HIGH + (int)Math.Floor((i / 3d)) * JL_DXF_DataBlock.DATA_BLOCK_HIGH));
            }

            //过关方式块
            this.DATA_BLOCK_LIST.Add(new GGFSDataBlock(SPImageGlobal.LEFT_RACE_START_X,
                                SPImageGlobal.START_POINT_Y + SPImageGlobal.BB_HIGH + 3 * JL_DXF_DataBlock.DATA_BLOCK_HIGH, 8));
            //倍数块
            this.DATA_BLOCK_LIST.Add(new MultipleDataBlock(SPImageGlobal.LEFT_RACE_START_X + 2 * SPImageGlobal.RACE_BLOCK_WIDTH,
                                SPImageGlobal.START_POINT_Y + SPImageGlobal.BB_HIGH + 3 * JL_DXF_DataBlock.DATA_BLOCK_HIGH));

        }

        /// <summary>
        /// 根据票面数据，获取所有要描绘的点
        /// </summary>
        /// <param name="lt"></param>
        /// <returns></returns>
        public override List<Point> getDrawPoints(lottery_ticket lt)
        {
            List<Point> points = new List<Point>();
            String[] codes = lt.bet_code.Split('|');
            for (int i = 0; i < this.DATA_BLOCK_LIST.Count; i++)
            {
                if (i<8)
                {
                    if (i < codes.Length)//codes.Length
                    {
                        this.DATA_BLOCK_LIST[i].getPointArrayByData(points, codes[i]);
                    }
                }
                else if (i==8)
                {
                    this.DATA_BLOCK_LIST[i].getPointArrayByData(points, lt.play_type.Replace("null","1c1").Split('-')[1]); 
                }else if (i==9)
                {
                    this.DATA_BLOCK_LIST[i].getPointArrayByData(points, lt.multiple); 
                }   
            }
            return points;
        }
    }
}
